<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="500dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/dialogwallpaper2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Settings"
                android:textSize="25sp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#fff" />
        </RelativeLayout>

        <TextView
            android:text="Please fill up the following to continue"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/farm_name"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="#6F6F6F"
            android:hint="Enter farm name"
            android:textColor="#fff"
            android:textAlignment="center"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_marginRight="@android:dimen/app_icon_size"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="40dp" />

        <Spinner
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@android:dimen/app_icon_size"
            android:spinnerMode="dialog" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/land_area"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:background="@drawable/rounded_edittext"
                android:hint="Land Size"
                android:inputType="numberSigned|numberDecimal"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textColorHint="#6F6F6F"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/la_measurement"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_gravity="center"
                android:background="@drawable/dialog_button"
                android:textColor="#01bea2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
            android:id="@+id/done"
            android:layout_gravity="center"
            android:background="@drawable/dialog_button"
            android:textColor="#01bea2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Confirm"/>

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>