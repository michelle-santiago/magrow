<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="magrow.project.application.RecordDetails">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        app:backgroundTint="#FA8000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:src="@drawable/ic_edit"
        app:backgroundTint="#FA8000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_gap"
                    android:text="Crop Name"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/crop_variety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crop Variety"
                    android:textAlignment="center"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/status_content"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="No Record Yet"
                    android:textSize="20sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/standard_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                               <LinearLayout
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:orientation="vertical"
                                   android:layout_height="match_parent">

                                   <ImageView
                                       android:scaleType="fitXY"
                                       android:layout_width="80dp"
                                       android:layout_gravity="center"
                                       android:layout_height="80dp"
                                       android:src="@drawable/area_planted"/>
                                    <TextView
                                        android:textSize="18sp"
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Area Planted"/>

                                   <TextView
                                       android:layout_gravity="center"
                                       android:textColor="#000"
                                       android:id="@+id/area_planted"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="        --      " />

                               </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="80dp"
                            android:src="@drawable/area_harvested"/>

                        <TextView
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area Harvested"/>

                        <TextView
                            android:layout_gravity="center"
                            android:textColor="#000"
                            android:id="@+id/areaHarvested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="        --      " />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_20"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="80dp"
                        android:layout_gravity="center"
                        android:layout_height="80dp"
                        android:src="@drawable/sacks"/>

                    <TextView
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sacks Harvested"/>

                   <LinearLayout
                       android:layout_gravity="center"
                       android:layout_width="wrap_content"
                       android:orientation="horizontal"
                       android:layout_height="wrap_content">

                       <TextView
                           android:textColor="#000"
                           android:id="@+id/no_of_cavans_harvested"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="        --      " />

                       <TextView
                           android:textColor="#000"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text=" sacks"/>


                   </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000"
                            android:id="@+id/weight_per_cavan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="        --      " />

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" kg"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#000"
                            android:id="@+id/ave_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="        --      " />

                        <TextView
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" kg/sack"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>