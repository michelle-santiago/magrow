<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4F0"
    tools:context=".About">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:paddingBottom="@dimen/standard_10"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="center"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MAGROW"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="magrow.000webhostapp.com" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_10"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        android:tint="@color/colorPrimary"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_dialog_info" />

                    <LinearLayout
                        android:layout_marginLeft="@dimen/standard_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Version"/>

                        <TextView
                            android:layout_marginTop="@dimen/standard_5"
                            android:id="@+id/version"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="1.1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_10"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/librarybtn"
                        android:background="@null"
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        android:tint="@color/colorPrimary"
                        android:scaleType="fitXY"
                        android:padding="8dp"
                        android:src="@drawable/ic_library" />

                    <LinearLayout
                        android:layout_marginLeft="@dimen/standard_15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/library"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Libraries &amp; API"
                            android:textColor="#000"
                            android:textStyle="bold" />



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_10"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/referencebtn"
                        android:background="@null"
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        android:tint="@color/colorPrimary"
                        android:scaleType="fitXY"
                        android:padding="8dp"
                        android:src="@drawable/ic_reference" />

                    <LinearLayout
                        android:layout_marginLeft="@dimen/standard_15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reference"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="References"
                            android:textColor="#000"
                            android:textStyle="bold" />



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Developers"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_10"
                    android:layout_marginLeft="@dimen/standard_20"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_user2"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/standard_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Marjoe Velasco"/>

                        <TextView
                            android:layout_marginTop="@dimen/standard_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="Central Luzon State University"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_10"
                    android:layout_marginLeft="@dimen/standard_20"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_user2"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/standard_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Michelle Santiago"/>

                        <TextView
                            android:layout_marginTop="@dimen/standard_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="Central Luzon State University"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Adviser"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/standard_10"
                    android:layout_marginLeft="@dimen/standard_20"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/standard_50"
                        android:layout_height="@dimen/standard_50"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_user2"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/standard_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Maria Isabel Milagroso"/>

                        <TextView
                            android:layout_marginTop="@dimen/standard_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:text="Central Luzon State University"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>