<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4F0"
    tools:context="magrow.project.application.fragment.Logged_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:shadowColor="#A8A8A8"
            android:orientation="horizontal">
            <TextView
                android:padding="10dp"
                android:id="@+id/ops_name"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="Account Details"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.92"
                android:src="@drawable/ic_profile"
                android:visibility="gone"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_white"
                android:textSize="20sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:layout_marginBottom="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/username1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_white"
                android:textSize="20sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_white"
                android:textSize="20sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"

                />

            <TextView
                android:id="@+id/textView89"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <Button

                        android:id="@+id/edit_account"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_pane"
                        android:shadowColor="#A8A8A8"
                        android:shadowRadius="5"
                        android:text="Edit Account"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <Button
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:id="@+id/change_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_pane"
                        android:shadowColor="#A8A8A8"
                        android:shadowRadius="5"
                        android:text="Change Password"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">


                    <Button
                        android:padding="5dp"
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded_pane_orange"
                        android:shadowColor="#A8A8A8"
                        android:shadowRadius="5"
                        android:text="Logout"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:visibility="visible" />


                </LinearLayout>



            </LinearLayout>




        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>