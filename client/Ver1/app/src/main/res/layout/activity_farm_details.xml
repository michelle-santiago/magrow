<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmDetails">

    <LinearLayout
        android:background="#65ADB6C9"
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FARM NAME"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:paddingLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/farm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/rounded_edittext_white"
                android:drawableLeft="@drawable/ic_profile2"
                android:hint="\t\tEnter Farm Name"
                android:inputType="textPersonName"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="#696969"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOCATION"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:paddingLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />

            <!--  <EditText
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:textSize="20dp"
                  android:hint="\t\Choose your location"
                  android:paddingBottom="20dp"
                  android:paddingTop="20dp"
                  android:paddingLeft="25dp"
                  android:textColor="@color/colorPrimary"
                  android:background="#fff"/>-->

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="#696969"
                android:textSize="20sp"
                android:background="@drawable/rounded_edittext_white"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:id="@+id/location"/>


            <EditText
                android:id="@+id/farm_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_edittext_white"
                android:hint="\t\tEnter Farm Size"
                android:drawableStart="@drawable/ic_farm_name"
                android:inputType="numberSigned|numberDecimal"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="#696969"
                android:textSize="20sp" />

            <Spinner
                android:textColor="#696969"
                android:textSize="20sp"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_edittext_white"
                android:id="@+id/la_measurement"/>


            <Button
                android:id="@+id/done"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="UPDATE"
                android:textSize="15sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="#fff"
                android:drawableRight="@drawable/ic_arrow_right"
                android:background="@drawable/rounded_pane"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>